# Mercado Publico Scraper Configuration
# Copy this file to .env and update with your values

# Base URL
MERCADO_PUBLICO_BASE_URL=https://www.mercadopublico.cl

# Chrome/Chromium Path
CHROME_PATH=/usr/bin/google-chrome
# On macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# On Windows: C:\Program Files (x86)\Google\Chrome\Application\chrome.exe

# Download Directory
DOWNLOAD_DIR=./downloads

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Selenium Headless Mode
HEADLESS=True

# Request Timeout (seconds)
TIMEOUT=30

# Retry Attempts
RETRY_ATTEMPTS=3

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./mercado_publico.db

# MongoDB (Optional)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=mercado_publico

# API Configuration
API_KEY=your_api_key_here

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=recipient@example.com
